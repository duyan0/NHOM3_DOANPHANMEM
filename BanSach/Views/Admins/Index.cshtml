@model IEnumerable<BanSach.Models.Admin>

@{
    ViewBag.Title = "Xin chào ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .tieude {
        text-align: center;
        font-weight: bold;
        color: black;
    }

    .them a {
        border-radius: 10px;
        background-color: black;
        color: white;
        font-size: large;
        padding: 5px;
        margin: 50px 10px 0 10px;
        outline: none;
        border: 1px solid black;
    }

        .them a:hover {
            text-decoration: none;
            color: white;
            background-color: black;
            outline: none;
        }
</style>

<h2 class="tieude">Quản lí Admin</h2>

<p class="them">
    @Html.ActionLink("Thêm ", "Create", null, new { @class = "btn btn-dark" })
</p>

<table class="table table-striped table-hover" >
    <thead class="text-white"style="background-color:black;">
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th>Tài khoản</th>
            <th>Mật khẩu</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ID)</td>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>
                    @(item.SoDT != null && item.SoDT.Length >= 3 ? item.SoDT.Substring(0, 3) + new string('*', item.SoDT.Length - 3) : "")
                </td>
                <td>@Html.DisplayFor(modelItem => item.VaiTro)</td>
                <td>@Html.DisplayFor(modelItem => item.TKhoan)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.MKhau).ToString().Replace(@item.MKhau, "******")
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm rounded-sm" })
                    @Html.ActionLink("Xoá", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm rounded-sm" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm rounded-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
















