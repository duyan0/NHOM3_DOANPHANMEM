@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Thêm tài khoản khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    .custom-form-control {
        border-radius: 8px; /* Bo góc */
        border: 1px solid black; /* Outline màu đen */
    }

    .btn-custom {
        border-radius: 8px; /* Bo góc cho nút */
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h2 class="text-center font-weight-bold">Thêm khách hàng</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Nhập tên khách hàng" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Nhập số điện thoại" } })
                @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Nhập email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Tài khoản</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TKhoan, new { htmlAttributes = new { @class = "form-control custom-form-control", placeholder = "Nhập tên tài khoản" } })
                @Html.ValidationMessageFor(model => model.TKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Mật khẩu</label>
            <div class="col-md-10">
                <input type="password" class="form-control custom-form-control" name="MKhau" id="MKhau" placeholder="Nhập mật khẩu" />
                @Html.ValidationMessageFor(model => model.MKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-10 offset-md-1 text-center">
                <input type="submit" value="Đăng ký" class="btn btn-success btn-custom text-white" />
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

