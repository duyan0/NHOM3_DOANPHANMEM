@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header  text-white text-center">
            <h2>Thông tin tài khoản</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Tên:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.TenKH)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Số điện thoại:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.SoDT)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Email:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Email)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Tài khoản:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.TKhoan)</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4 text-right font-weight-bold">Mật khẩu:</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.MKhau)</div>
            </div>
            <div class="text-center mt-4 ">
                @Html.ActionLink("Chỉnh sửa", "EditAD", new { id = Model.IDkh }, new { @class = "btn btn-success btn-lg px-5" })
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        font-weight: bold;
    }

    .btn {
        padding: 10px 30px;
        border-radius: 25px;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .container {
        max-width: 700px;
    }
</style>
