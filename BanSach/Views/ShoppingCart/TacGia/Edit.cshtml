@model BanSach.Models.TacGia

@{
    ViewBag.Title = "Chỉnh sửa thông tin tác giả " + Model.IDtg; // Cập nhật tiêu đề
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa Tác Giả</h2> <!-- Tiêu đề chính -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDtg)

        <div class="form-group">
            <p class="font-weight-bold control-label col-md-2 ">Tên Tác Giả</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTacGia, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc -->
                @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="font-weight-bold control-label col-md-2 ">Ngày sinh</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc -->
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="font-weight-bold control-label col-md-2" for="QuocGia">Quốc gia</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.QuocGia, (IEnumerable<SelectListItem>)ViewBag.QuocGia, "Chọn quốc gia", new { @class = "form-control rounded" }) <!-- Bo góc -->
                @Html.ValidationMessageFor(model => model.QuocGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="font-weight-bold control-label col-md-2 ">Tiểu sử</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TieuSu, new { htmlAttributes = new { @class = "form-control rounded" } }) <!-- Bo góc -->
                @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary rounded" /> <!-- Bo góc cho nút -->
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-secondary rounded" }) <!-- Bo góc cho nút -->
</div>
