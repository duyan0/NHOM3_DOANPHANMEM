    <style>
        #concard {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
            padding: 10px;
        }

            #concard a {
                text-decoration: none; /* Bỏ gạch chân mặc định */
                color: black; /* Màu chữ */
                padding: 10px 15px;
                margin-bottom: 5px;
                border-radius: 4px;
                transition: background-color 0.3s ease, color 0.3s ease; /* Thêm hiệu ứng chuyển đổi cho màu chữ */
                font-weight: bold; /* Tô đậm chữ */
                display: block; /* Đặt các link thành dạng block */
                border: 1px solid #ddd; /* Đường viền nhẹ */
            }

                /* Màu nền khi hover */
                #concard a:hover {
                    background-color: #acaf79dd; /* Màu nền khi hover */
                    color: black; /* Màu chữ khi hover */
                }

                /* Màu nền cho mục đang hoạt động */
                #concard a.nav-item.active {
                    background-color: #007bff; /* Màu nền cho mục đang hoạt động */
                    color: white; /* Màu chữ cho mục đang hoạt động */
                }

        /* Các link trong dropdown menu */
        .dropdown-item {
            text-decoration: none; /* Bỏ gạch chân mặc định */
            color: black; /* Màu chữ */
            padding: 10px 15px; /* Padding giống nhau với các link khác */
            transition: background-color 0.3s ease, color 0.3s ease; /* Thêm hiệu ứng chuyển đổi cho màu nền */
        }

            .dropdown-item:hover {
                background-color: #acaf79dd; /* Màu nền khi hover cho dropdown */
                color: black; /* Màu chữ khi hover cho dropdown */
            }
    </style>
    <style>
        /* Footer */
        .footer {
            background-color: #1f1f20;
            color: #f8f9fa;
            padding-top: 20px;
            padding-bottom: 20px;
        }

            /* Footer Text */
            .footer p {
                font-size: 14px;
                color: #d1d1d1;
                margin-bottom: 0;
            }

        /* Footer Links */
        .footer-link {
            color: #acaf79; /* Màu chữ của link */
            text-decoration: none;
            margin: 0 10px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            /* Hover Effects */
            .footer-link:hover {
                color: #f8f9fa; /* Màu chữ khi hover */
                text-decoration: underline; /* Gạch chân khi hover */
            }

        /* List Inline */
        .list-inline-item {
            display: inline-block;
            margin: 0 5px;
        }
        .zalo-contact {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            z-index: 1000;
            border-radius: 60%;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

            .zalo-contact img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .zalo-contact:hover {
                transform: scale(1.1); /* Tăng kích thước khi hover */
            }
    </style>
    <style>
        /* Navbar Styling */
        #navbar {
            background-color: #1f1f20;
            border-bottom: 1px solid #333;
            padding-bottom: 10px;
        }

        /* Navbar Links */
        #admin .nav-link {
            color: #f8f9fa;
            font-weight: 500;
            transition: color 0.3s ease, background-color 0.3s ease;
        }

            /* Hover and Active Link Styles */
            #admin .nav-link:hover {
                color: #acaf79;
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 4px;
            }

            #admin .nav-link.active {
                color: #f8f9fa;
                background-color: #343a40;
                border-radius: 4px;
            }

        /* Navbar Brand Logo and Title */
        #navbar h2 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-left: 10px;
        }

        #loading {
            position: fixed; /* Đặt vị trí cố định */
            width: 100%; /* Chiếm toàn bộ chiều rộng */
            height: 100%; /* Chiếm toàn bộ chiều cao */
            top: 0; /* Vị trí trên cùng */
            left: 0; /* Vị trí bên trái */
            background: rgba(255, 255, 255, 0.8); /* Nền trắng trong suốt */
            z-index: 9999; /* Đảm bảo hiển thị trên các phần tử khác */
            display: flex; /* Sử dụng flexbox */
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: center; /* Căn giữa theo chiều ngang */
        }

        .spinner {
            width: 50px; /* Đường kính vòng tròn */
            height: 50px; /* Đường kính vòng tròn */
            border: 6px solid rgba(255, 0, 0, 0.5); /* Màu nền cho vòng tròn với độ trong suốt */
            border-top: 6px solid red; /* Màu cho phần trên */
            border-radius: 50%; /* Bo góc thành hình tròn */
            animation: spin 1s linear infinite; /* Áp dụng hiệu ứng quay */
        }

        
    </style>
    <script>
        window.addEventListener("load", function () {
            const loadingElement = document.getElementById("loading");
            loadingElement.style.display = "none";
        });
    </script>
</body>
